@model MBGIE.ViewModels.NewPostImageViewModel

@using (Html.BeginForm("AddImages","Post",FormMethod.Post,new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Images</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @{


                    try
                    {
                        <img src="@Url.Content(Model.Imagesz.Url)" width="250" height="250" />

                    }
                    catch (Exception)
                    {
                        <img src="~/Images/GenericImage.png" width="250" height="250" />

                    }
                }

                <input type="file" name="Imagesz.ImageFile" required value="Select image" />
            </div>                
        </div>


     

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload!" class="btn btn-default" />
            </div>
        </div>
    </div>
}

